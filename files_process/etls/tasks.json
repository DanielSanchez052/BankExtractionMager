    "extract_provider": {
      "script": "files_process/etls/extract/extract_pdf.py",
      "method": "extract",
      "args": {
        "process_dir": "files_process/to_process",
        "column_mapping": [
          "Movimiento",
          "Fecha Operacion",
          "Fecha Valor",
          "Concepto",
          "Cargos",
          "Abonos",
          "Saldo"
        ]
      }
    },
    "steps": [
      {
        "name": "clean",
        "script": "files_process/etls/steps/transform_transactions.py",
        "method": "clean_data",
        "args": {},
        "type": "Transform"
      }
    ],
    "load_provider": {
      "script": "files_process/etls/load/sqlite.py",
      "method": "save_to_sqlite",
      "args": {
        "destination": "transactions",
        "connection_string": "sqlite:///my_lite_store.db"
      }
    }
  },
